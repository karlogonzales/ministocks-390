<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nitezh.ministock.activities.menu.MenuScrollableAppearance"
    android:id="@+id/relative">

    <Button
        android:id="@+id/background"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:gravity="left|center_vertical"
        android:text="Widget Background: Change background" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/background"
        android:gravity="center"
        android:text="------------------------------------------------------------------------------------"
        android:textAppearance="@android:style/TextAppearance"
        android:visibility="visible" />


    <Button
        android:id="@+id/txtColor"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/background"
        android:layout_marginTop="20dp"
        android:gravity="left|center_vertical"
        android:text="Change Text Color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtColor"
        android:gravity="center"
        android:text="------------------------------------------------------------------------------------"
        android:textAppearance="@android:style/TextAppearance"
        android:visibility="visible" />

    <Button
        android:id="@+id/txtStyle"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtColor"
        android:layout_marginTop="20dp"
        android:gravity="left|center_vertical"
        android:text="Change Text Font" />

</RelativeLayout>
